{
  "$schema": "./node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*", "projects/*", "tools/*"],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "yes": true
    },
    "version": {
      "message": ":hot_pepper: chore(release): publish %s",
      "conventionalCommits": true
    }
  }
}
